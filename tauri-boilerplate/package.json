{
  "name": "tauri-security-boilerplate",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A security-focused Tauri 2.0 application boilerplate with enterprise-grade features",
  "author": "Gcavazo1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gcavazo1/tauri-security-boilerplate.git"
  },
  "keywords": [
    "tauri",
    "security",
    "boilerplate",
    "react",
    "typescript",
    "desktop-app"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\"",
    "security:audit": "npm audit --production",
    "security:audit:fix": "npm audit fix --production",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@tauri-apps/api": "2.0.0-beta.0",
    "@tauri-apps/plugin-dialog": "2.0.0-beta.0",
    "@tauri-apps/plugin-shell": "2.0.0-beta.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zustand": "4.4.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "2.0.0-beta.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "29.5.0",
    "@types/node": "20.10.6",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.16",
    "eslint": "8.45.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-security": "1.7.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "lint-staged": "15.2.0",
    "postcss": "8.4.32",
    "prettier": "3.0.3",
    "tailwindcss": "3.4.0",
    "ts-jest": "29.1.0",
    "typescript": "5.0.2",
    "vite": "4.4.4",
    "vite-plugin-checker": "0.6.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
} 